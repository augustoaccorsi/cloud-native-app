{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "app",
            "image": "augustoaccorsi/app-arqsw-aws:latest",
            "essential": true,
            "memory": 200,
            "environment": [
                {
                    "name": "FLASK_ENV",
                    "value": "prod"
                }
            ],
            "portMappings": [
              {
                "hostPort": 5000,
                "containerPort": 5000
              }
            ]
        },
        {
            "name": "nginx",
            "image": "augustoaccorsi/app-nginx-aws:latest",
            "essential": true,
            "memory": 200,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": [
                "app"
            ]
        }
    ]
}